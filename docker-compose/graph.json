{
    "auth-services": {
        "tier_type" : "node",
        "paths": {
            "/api/login": {
                "actions": [
                    {
                        "name": "login-processing",
                        "type": "ProcessingAction",
                        "properties": {
                            "minDuration": 150,
                            "maxDuration": 400,
                            "numCores": 2,
                            "numThreadsPerCore": 3,
                            "load": 0.2
                        }
                    },
                    {
                        "name": "mongo-sessions",
                        "type": "MongoAction",
                        "properties": {
                            "action": "Insert",
                            "connectionString": "mongo-sessions:27017",
                            "database": "sessions",
                            "collection": "sessions"
                        }
                    }
                ]
            },
            "*": {
                "actions": [
                    {
                        "name": "catch-all-processing",
                        "type": "ProcessingAction",
                        "properties": {
                            "minDuration": 150,
                            "maxDuration": 800,
                            "numCores": 2,
                            "numThreadsPerCore": 3,
                            "load": 0.2
                        }
                    }
                ]
            }
        }
    },
    "core-services": {
        "tier_type": "java",
        "paths": {
            "/api/login": {
                "actions": [
                    {
                        "name": "login-services",
                        "type": "HttpAction",
                        "properties": {
                            "requestMethod": "GET",
                            "url": "https://auth-services:3000/api/login"
                        }
                    }                    
                ]
            },
            "/api/search": {
                "actions": [
                    {
                        "name": "lambda-person-search",
                        "type": "HttpAction",
                        "properties": {
                            "requestMethod": "GET",
                            "url": "##NODEJS_LAMBDA_URL##/person/random"
                        }
                    },
                    {
                        "name": "search-processing",
                        "type": "ProcessingAction",
                        "properties": {
                            "minDuration": 150,
                            "maxDuration": 500,
                            "numCores": 2,
                            "numThreadsPerCore": 2,
                            "load": 0.4,
                            "canSpike": true,
                            "pctSlowTxns": 0.25,
                            "spikeMultiplier": 10
                        }
                    }
                ]
            },
            "/api/addJob": {
                "actions": [
                    {
                        "name": "lambda-add-job",
                        "type": "HttpAction",
                        "properties": {
                            "requestMethod": "GET",
                            "url": "##JAVA_LAMBDA_URL##/orders/submit"
                        }
                    },
                    {
                        "name": "add-job-processing",
                        "type": "ProcessingAction",
                        "properties": {
                            "minDuration": 150,
                            "maxDuration": 500,
                            "numCores": 2,
                            "numThreadsPerCore": 2,
                            "load": 0.4,
                            "canSpike": true,
                            "pctSlowTxns": 0.25,
                            "spikeMultiplier": 10
                        }
                    }
                ]
            },
            "/api/getJob": {
                "actions": [
                    {
                        "name": "lambda-add-job",
                        "type": "HttpAction",
                        "properties": {
                            "requestMethod": "GET",
                            "url": "##JAVA_LAMBDA_URL##/orders/random"
                        }
                    },
                    {
                        "name": "add-job-processing",
                        "type": "ProcessingAction",
                        "properties": {
                            "minDuration": 150,
                            "maxDuration": 500,
                            "numCores": 2,
                            "numThreadsPerCore": 2,
                            "load": 0.4,
                            "canSpike": true,
                            "pctSlowTxns": 0.25,
                            "spikeMultiplier": 10
                        }
                    }
                ]
            },
            "/api/submitCandidate": {
                "actions": [
                    {
                        "name": "lambda-submit-candidate",
                        "type": "HttpAction",
                        "properties": {
                            "requestMethod": "GET",
                            "url": "##NODEJS_LAMBDA_URL##/person/submit"
                        }
                    },
                    {
                        "name": "submit-candidate-processing",
                        "type": "ProcessingAction",
                        "properties": {
                            "minDuration": 150,
                            "maxDuration": 500,
                            "numCores": 2,
                            "numThreadsPerCore": 2,
                            "load": 0.4,
                            "canSpike": true,
                            "pctSlowTxns": 0.25,
                            "spikeMultiplier": 10
                        }
                    }
                ]
            },
            "*": {
                "actions": [
                    {
                        "name": "catch-all-processing",
                        "type": "ProcessingAction",
                        "properties": {
                            "minDuration": 150,
                            "maxDuration": 800,
                            "numCores": 2,
                            "numThreadsPerCore": 3,
                            "load": 0.2
                        }
                    }
                ]
            }
        }
    },
    "web-api": {
